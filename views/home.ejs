<% include templates/header.ejs %>

  <body>

    <div class="container">
      <div class="row">

        <div class="col-md-12 content">
          <h3>Blog posts</h3> <hr>
          <div class="row">
            
            <div class="col-md-9">

              <% for(var i = 0; i < posts.length; i++ ) {%>
                <% var url = "/post/"+posts[i].slug %>
                  <div class="row box">
                    <div class="col-md-12" id="block">
                      <div id="content">
                        <a style="text-decoration:none; color:inherit" href=<%= url %> >
                          <h3>
                            <%= posts[i].title %>
                          </h3>
                        </a>
                        <hr>
                        <span class="brief">
                          <%- posts[i].content.brief %>
                        </span>
                        <a class="readmore btn btn-primary" href=<%= url %> >Read More &rarr;</a>
                      </div>
                      <div id="home-image">
                        <img class="img-thumbnail rounded float-right" src=<%= posts[i].image.url %> ></img>
                      </div>
                    </div>
                  </div>
                  <% } %>

            </div>

            <div class="col-md-3">
              <p>Other menu items to come here</p>
            </div>
          </div>

        </div>

      </div>
    </div>
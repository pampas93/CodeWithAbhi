<% include templates/header.ejs %>

<div class="container">
  <div class="row">
    <div class="col-md-12 post">

      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <td width="65%" align="center">
                <h1 class="mt-4" id="post-title">
                  <%= post.title %>
                </h1>
                <hr>
                <p id="publish-text">Posted on
                  <%= moment(post.publishedAt).format('MMMM Do YYYY') %>
                </p>
              </td>
              <td width="35%">
                <div id="post-image">
                  <img class="img-thumbnail rounded" src=<%= post.image.url %> ></img>
                </div>
              </td>
            </tr>
          </thead>
        </table>
      </div>

      <div class="row">
        <div class="col-md-8 post-content">
          <%- post.content.extended %>
        </div>
      </div>

      <div class="post-content">

      </div>

    </div>
  </div>
</div>

<% include templates/footer.ejs %>